[general]
accounts = Gmail, FIM

[Account Gmail]
localrepository = LocalGmail
remoterepository = RemoteGmail

[Repository LocalGmail]
type = Maildir
localfolders = ~/Mail/Gmail

[Repository RemoteGmail]
type = IMAP
remotehost = imap.gmail.com
remoteuser = lukas.krodinger@gmail.com
ssl = yes
sslcacertfile = /etc/ssl/cert.pem
remotepasseval = __import__('getpass').getpass("Enter Gmail password: ")


[Account FIM]
localrepository = LocalFIM
remoterepository = RemoteFIM

[Repository LocalFIM]
type = Maildir
localfolders = ~/Mail/FIM

[Repository RemoteFIM]
type = IMAP
remotehost = email.uni-passau.de
remoteuser = krodin03@ads.uni-passau.de
ssl = yes
sslcacertfile = /etc/ssl/cert.pem
remotepass = __import__('getpass').getpass("Enter FIM password: ")